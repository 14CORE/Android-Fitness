<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/card_margin">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_lat_error_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_lat_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_lat_error"
            android:inputType="phone"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_lng_error_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_lng_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_lng_error"
            android:inputType="phone"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>
</LinearLayout>